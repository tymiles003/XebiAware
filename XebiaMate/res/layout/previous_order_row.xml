<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_idInfo"
        style="@style/tv_grey_desc"
        android:text="Order ID - "
        android:textColor="@color/text_dark_blue" />

    <TextView
        android:id="@+id/tv_orderId"
        style="@style/tv_grey_desc"
        android:layout_toRightOf="@id/tv_idInfo"
        android:text="XYZ12345"
        android:textColor="@color/text_dark_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_orderAmount"
        style="@style/tv_red_price"
        android:layout_alignBaseline="@+id/tv_orderStatusMessage"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_orderSubmittedDate"
        style="@style/tv_grey_desc"
        android:layout_alignBaseline="@+id/tv_orderId"
        android:layout_alignParentRight="true"
        android:text="04-Jan-14 5:45PM" />

    <TextView
        android:id="@+id/tv_orderStatusMessage"
        style="@style/tv_grey_desc"
        android:layout_below="@+id/tv_orderId"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tv_orderAmount"
        android:ellipsize="end"
        android:maxLines="1" />
    <TextView
        android:id="@+id/tv_orderText"
        style="@style/tv_grey_desc"
        android:layout_below="@+id/tv_orderStatusMessage"
        android:ellipsize="end"
        android:maxLines="1" />

</RelativeLayout>