<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_drop_shadow" >

    <ImageView
        android:id="@+id/iv_icon_online"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/com_facebook_button_check_on" />

    <TextView
        android:id="@+id/tv_lastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="@color/text_white"
        android:paddingRight="3dp"
        android:textSize="12sp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_empIm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_lastSeen"
        android:layout_centerHorizontal="true"
        app:border="true"
        app:border_color="@color/text_white"
        app:border_width="2dp"
        app:shadow="true" />

    <TextView
        android:id="@+id/tv_empName"
        style="@style/tv_dark_green"
        android:layout_below="@+id/iv_empIm"
        android:layout_marginTop="10dp"
        android:ellipsize="none"
        android:gravity="center_horizontal"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tv_empDesignation"
        style="@style/tv_dark_green"
        android:layout_below="@+id/tv_empName"
        android:layout_marginTop="3dp"
        android:ellipsize="none"
        android:gravity="center_horizontal"
        android:textColor="@color/text_white" />

</RelativeLayout>