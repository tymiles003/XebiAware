<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_productInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/order_row" />
    </RelativeLayout>

    <View
        android:id="@+id/view_sep_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_productInfo"
        android:background="@color/text_light_grey" />

    <LinearLayout
        android:id="@+id/ll_cartArithmatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_sep_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_plus"
            style="@style/btn_add_to_cart"
            android:text="+" />

        <EditText
            android:id="@+id/et_Qty"
            style="@style/btn_add_to_cart"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="4" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_minus"
            style="@style/btn_add_to_cart"
            android:text="-" />
    </LinearLayout>

