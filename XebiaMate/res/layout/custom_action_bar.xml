<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xebia_color"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageView
        android:id="@+id/iv_xebiaLogo"
        style="@style/wrap_wrap"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:onClick="onActionItemClicked"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/xebia_logo" />

    <RelativeLayout
        android:id="@+id/rl_refresh"
        style="@style/wrap_wrap"
        android:layout_width="40dp"
        android:layout_alignParentRight="true" >

        <ImageView
            android:id="@+id/iv_refresh"
            style="@style/wrap_wrap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:onClick="onActionItemClicked"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/stat_notify_sync_noanim" />

        <ProgressBar
            android:id="@+id/progressBar_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_search"
        style="@style/wrap_wrap"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/rl_refresh"
        android:onClick="onActionItemClicked"
        android:padding="5dp"
        android:src="@drawable/abc_ic_search" />

</RelativeLayout>