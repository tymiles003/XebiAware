<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="TransparentTheme"></style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_dark</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="tv_dark_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Bib Cock Long Nose</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="tv_grey_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">Model No 200, Vantage Products, Value 20</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="iv_edit" parent="@style/wrap_wrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@android:drawable/ic_menu_edit</item>
    </style>

    <style name="view_hz_sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_light_grey</item>
    </style>

    <style name="tv_red_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_price_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Rs. 1200</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="tv_cart_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/cart_icon</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="btn_add_to_cart">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/lock_button_selector</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="btn_order">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/lock_button_selector</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="et_form_single_line" parent="@style/match_wrap">
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/et_form_background</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

    <style name="tv_error" parent="@style/wrap_wrap">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_price_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tv_login" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/text_sea_green</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="btn_form" parent="@style/match_wrap">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/et_form_background</item>
        <item name="android:fontFamily">sens-serif-condensed</item>
    </style>

</resources>